    <cache name="flash" maxElementsInMemory="1000" timeToLiveSeconds="5" eternal="false" overflowToDisk="false" memoryStoreEvictionPolicy="LFU" transactionalMode="off"/>

    <cache name="short" maxElementsInMemory="1000" timeToLiveSeconds="300" eternal="false" overflowToDisk="false" memoryStoreEvictionPolicy="LFU" transactionalMode="off"/>

    <cache name="long" maxElementsInMemory="1000" timeToLiveSeconds="3600" eternal="false" overflowToDisk="false" memoryStoreEvictionPolicy="LFU" transactionalMode="off"/>

    <cache name="eternal" maxElementsInMemory="1000" eternal="true" overflowToDisk="false" memoryStoreEvictionPolicy="LFU" transactionalMode="off"/>

</ehcache>